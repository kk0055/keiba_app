{
  "builds": [
    {
      "src": "../backend/config/wsgi.py", 
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/config/wsgi.py" 
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}